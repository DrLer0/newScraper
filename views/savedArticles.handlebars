<div id="wrapper">
  <nav class="navbar navbar-expand navbar-light bg-light">
  <a class="navbar-brand" href="/">NewScraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
       <div id="clearBtn" class="btn btn-info btn-sm m-1">Clear Articles</div>
      </li>
    </ul>
  </div>
</nav>
  <div class="jumbotron">
    <h1 class="display-4">NewScraper</h1>
    <p class="lead">Get new news from CNN!</p>
  </div>
  <div class="card-deck">
    {{#each article}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <a href="{{this.link}}">Link</a>
        <div data-id="{{this._id}}" class="btn btn-primary btn-sm seeNoteBtn">See Notes</div>
      </div>
    </div>
    <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for: {{this._id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- <p>tst</p> --}}
                {{#each this.note}}
                    <p>{{this.body}}</p>
                    <div data-id="{{this.id}}" class="btn btn-danger btn-sm seeNoteBtn">X</div>
                {{/each}}
            </div>
            <div class="modal-footer">
                <textarea id='bodyinput' name='body'></textarea>
                <button id="saveNote" data-id="{{this._id}}" type="button" class="btn btn-primary">Save Note</button>
            </div>
            </div>
        </div>
    </div>    
{{/each}}
  </div>

</div>